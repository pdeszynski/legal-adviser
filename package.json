{
  "name": "legal-ai-platform",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "dev": "turbo run dev",
    "dev:infra": "./scripts/dev-startup.sh --infra",
    "dev:full": "./scripts/dev-startup.sh",
    "dev:ai-engine-only": "./scripts/dev-startup.sh --ai-only",
    "dev:apps": "./scripts/dev-startup.sh --skip-infra",
    "dev:backend": "turbo run dev --filter=@legal/backend",
    "dev:web": "turbo run dev --filter=@legal/web",
    "dev:ai-engine": "turbo run dev --filter=@legal/ai-engine",
    "dev:stop": "./scripts/dev-shutdown.sh",
    "dev:stop:all": "./scripts/dev-shutdown.sh --all",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:integration": "turbo run test:integration",
    "db:seed": "turbo run db:seed --filter=@legal/backend",
    "db:seed:clean": "turbo run db:seed:clean --filter=@legal/backend",
    "db:seed:status": "turbo run db:seed:status --filter=@legal/backend",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:turbo": "rm -rf .turbo && rm -rf apps/*/.turbo && rm -rf packages/*/.turbo",
    "codegen": "turbo run codegen",
    "prepare": "husky && turbo run build --filter='./packages/*'"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "eslint-config-turbo": "^2.7.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.0"
}
