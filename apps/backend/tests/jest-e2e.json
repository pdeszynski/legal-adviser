{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "roots": ["<rootDir>/tests/e2e"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^uuid$": "<rootDir>/__mocks__/uuid.js"
  }
}
