# Development stage - for local development with volume mounts
FROM node:20-alpine AS development

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy root package manifests first for better layer caching
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY turbo.json ./

# Copy packages (required for pnpm workspace resolution)
COPY packages ./packages

# Copy web app source code
# Copy everything first, then install - node_modules will be seeded by this layer
COPY apps/web ./apps/web

# Install all dependencies
# The node_modules created here will be preserved by named volume in docker-compose
RUN pnpm install

# Build workspace packages (dependencies for apps)
RUN pnpm run build --filter='./packages/*'

# Copy backend schema for GraphQL codegen (if schema.gql exists, copy it)
# In local development, the schema should be available via volume mount
COPY apps/backend/src/schema.gql ./apps/backend/src/schema.gql 2>/dev/null || true

# Run GraphQL codegen to generate TypeScript types
RUN cd apps/web && pnpm codegen || echo "Codegen skipped - schema not available"

# Build web (skip ESLint for Docker builds)
RUN pnpm run build --filter=@legal/web

EXPOSE 3000

# For development, run directly with next from web directory
# Use pnpm next to ensure it uses the container's node_modules
WORKDIR /app/apps/web
CMD ["pnpm", "next", "dev"]

# Build stage - optimized for production builds
FROM node:20-alpine AS builder

WORKDIR /app

# Install pnpm (system dependency - cached independently)
RUN npm install -g pnpm

# Copy root package manifests first for better layer caching
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY turbo.json ./

# Copy packages (required for pnpm workspace resolution)
# Copy packages before app source code for better layer caching
# The packages directory changes less frequently than app code
COPY packages ./packages

# Copy only app package.json files first (not source code)
# This allows dependency installation to be cached even when source code changes
COPY apps/web/package.json ./apps/web/
COPY apps/backend/package.json ./apps/backend/

# Install all dependencies (cached if manifests unchanged)
RUN pnpm install

# Build workspace packages (dependencies for apps)
RUN pnpm run build --filter='./packages/*'

# Copy backend schema and source code needed for schema generation
# The schema.gql is auto-generated by NestJS GraphQL during the build
COPY apps/backend ./apps/backend

# Generate backend GraphQL schema
RUN cd apps/backend && npx nest build --dry-run || true

# Copy web source code AFTER pnpm install (for better caching)
COPY apps/web ./apps/web

# Run GraphQL codegen to generate TypeScript types
RUN cd apps/web && pnpm codegen

# Build web (skip ESLint for Docker builds)
RUN pnpm run build --filter=@legal/web

# Production stage - optimized for production deployments
FROM node:20-alpine AS production

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy root manifests first for better layer caching
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copy workspace files needed for production dependency resolution
# Copy packages before app code for better cache invalidation
COPY packages ./packages
COPY apps/web/package.json ./apps/web/

# Install production dependencies only
# This layer is cached if manifests and packages/ are unchanged
# --ignore-scripts prevents running prepare script which needs devDependencies
RUN pnpm install --prod --ignore-scripts

# Copy built artifacts from builder stage
COPY --from=builder /app/apps/web/.next ./apps/web/.next
COPY --from=builder /app/apps/web/public ./apps/web/public
COPY --from=builder /app/apps/web/next.config.mjs ./apps/web/
COPY --from=builder /app/packages ./packages

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nextjs -u 1001 -G nodejs

USER nextjs

WORKDIR /app/apps/web

EXPOSE 3000

CMD ["node", "node_modules/refine/dist/bin.js", "start"]
